<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/header"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/actionBarHeader">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                xmlns:app="http://schemas.android.com/apk/res-auto"
                app:hintAnimationEnabled="true"
                android:id="@+id/textinput_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:textColorHint="@color/light_gray">

                <com.iamindiary.utils.CustomEditTextRegular
                    android:id="@+id/edittext_username"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:hint="USERNAME"
                    android:inputType="textCapSentences"
                    android:textSize="16sp"
                    android:singleLine="true"
                    android:textColor="@color/edittext_text_color"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textinput_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView6"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:textColorHint="@color/light_gray">

                <com.iamindiary.utils.CustomEditTextRegular
                    android:id="@+id/edittext_email"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:hint="EMAIL"
                    android:singleLine="true"
                    android:textColor="@color/edittext_text_color"
                    android:textSize="16sp" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textinput_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/usernameTextInputLayout"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:textColorHint="@color/light_gray">

                <com.iamindiary.utils.CustomEditTextRegular
                    android:id="@+id/edittext_password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:hint="PASSWORD"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:textSize="16sp"
                    android:textColor="@color/edittext_text_color" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textinput_firstname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:textColorHint="@color/light_gray">

                <com.iamindiary.utils.CustomEditTextRegular
                    android:id="@+id/edittext_firstname"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:hint="FIRST NAME"
                    android:singleLine="true"
                    android:textColor="@color/edittext_text_color"
                    android:textSize="16sp" />

            </android.support.design.widget.TextInputLayout>



            <android.support.design.widget.TextInputLayout
                android:id="@+id/textinput_lastname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dobTextInputLayout"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:textColorHint="@color/light_gray">

                <com.iamindiary.utils.CustomEditTextRegular
                    android:id="@+id/edittext_lastname"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:hint="LAST NAME"
                    android:singleLine="true"
                    android:textColor="@color/edittext_text_color"
                    android:textSize="16sp" />

            </android.support.design.widget.TextInputLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">
                
                <com.iamindiary.utils.CustomTextViewRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="16sp"
                    android:text="PRIVATE PROFILE"/>
                <com.kyleduo.switchbutton.SwitchButton
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    app:kswTintColor="@color/green"
                    android:id="@+id/switch_privateprofile"
                    android:checked="false"
                    android:layout_alignParentRight="true"
                    style="@style/SwitchButtonStyleMD"
                    app:kswThumbDrawable="@drawable/ellipse_1"
                    app:kswFadeBack="true"
                    app:buttonTintMode="multiply"
                    app:kswThumbMarginBottom="-10dp"
                    app:kswThumbMarginLeft="-3dp"
                    app:kswThumbMarginRight="-3dp"
                    app:kswThumbMarginTop="-10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <com.iamindiary.utils.CustomTextViewLight
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="When youâ€™re private, only people you approve can follow you and invite you to events"
                android:textSize="12sp"
                android:textColor="@color/black"
                />


            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_sign_up"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textview_signup"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:text="Sign Up"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />


            </LinearLayout>




        </LinearLayout>
    </ScrollView>

</LinearLayout>